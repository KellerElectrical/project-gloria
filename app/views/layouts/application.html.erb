<!DOCTYPE html>
<html>
  <head>
    <title>Gloria</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<p class="notice"><%= notice %></p>
  	<p class="alert"><%= alert %></p>

    <% if use_auth_view? %>
      <div class="container">
        <div class="row">
          <div class="col-md-4"></div>
          <div class="col-md-4">
            <br/>
            <%= yield %>
          </div>
          <div class="col-md-4"></div>
        </div>
      </div>
    <% else %>

      <%= yield %>
    
    <% end %>
  </body>
</html>
